<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="swe2024.librarysep.View.userDashboardController">
    <children>
        <Label layoutX="44.0" layoutY="38.0" prefHeight="38.0" prefWidth="378.0" text="Library Management System">
            <font>
                <Font name="Arial Nova Cond Light" size="24.0" />
            </font>
        </Label>
        <TableView fx:id="bookTableViewUser" layoutX="184.0" layoutY="120.0" prefHeight="368.0" prefWidth="479.0">
            <columns>
                <TableColumn fx:id="genreColumn" prefWidth="75.0" text="Genre" />
                <TableColumn fx:id="titleColumn" prefWidth="116.0" text="Title" />
                <TableColumn fx:id="authorColumn" prefWidth="107.0" text="Author" />
                <TableColumn fx:id="releaseYearColumn" prefWidth="81.0" text="Release Year" />
                <TableColumn fx:id="stateColumn" prefWidth="99.0" text="State" />
            </columns>
        </TableView>
        <Button layoutX="48.0" layoutY="136.0" mnemonicParsing="false" onAction="#handleBorrowBook" prefHeight="38.0" prefWidth="98.0" text="Borrow">
            <effect>
                <DropShadow />
            </effect>
        </Button>
        <Button layoutX="48.0" layoutY="193.0" mnemonicParsing="false" onAction="#handleReturnBook" prefHeight="38.0" prefWidth="98.0" text="Return">
            <effect>
                <DropShadow />
            </effect>
        </Button>
        <Button layoutX="48.0" layoutY="250.0" mnemonicParsing="false" onAction="#handleReserveBook" prefHeight="38.0" prefWidth="98.0" text="Reserve">
            <effect>
                <DropShadow />
            </effect>
        </Button>
        <Button layoutX="48.0" layoutY="331.0" mnemonicParsing="false" onAction="#handleCancelBook" prefHeight="38.0" prefWidth="120.0" text="Cancel Reservation ">
            <effect>
                <DropShadow />
            </effect>
        </Button>
        <MenuButton fx:id="filterDropdownMenu" layoutX="422.0" layoutY="83.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="78.0" text="Filter">
            <effect>
                <DropShadow />
            </effect>
            <items>
                <MenuItem mnemonicParsing="false" text="Action 1" />
                <MenuItem mnemonicParsing="false" text="Action 2" />
            </items>
        </MenuButton>
    </children>
</AnchorPane>
